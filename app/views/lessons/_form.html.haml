= form_for @lesson do |f|
  - if @lesson.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lesson.errors.count, "error")} prohibited this lesson from being saved:"
      %ul
        - @lesson.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :room
    = f.number_field :room
  .field
    = f.label :teacher
    = f.text_field :teacher
  .field
    = f.label :group_num
    = f.number_field :group_num
  .field
    = f.label :lesson_name
    = f.text_field :lesson_name
  .field
    = f.label :start_at
    = f.datetime_select :start_at
  .field
    = f.label :end_at
    = f.datetime_select :end_at
  .actions
    = f.submit 'Save'
